<%- include("./header.ejs")  %>
<style>
    .a{
        margin-right: 100px;
        text-align: justify;
    }
    @media(max-width:768px){
        .a{
        margin-right: 0px;
        text-align: justify;
        }
    }
</style>
<section class="blog-detail mtb-40">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-left">
                    <h1><%= data.title%></h1>
                    <div class="posted-on">
                        <%= data.createdAt.toLocaleDateString()  %>
                    </div>
                    <div class="detail-img">
                        <img src="/imageupload/<%= data.image %>" class="img-fluid" alt="blog1">

                    </div>
                    <div class="blog-desc a">
                        <p><%= data.description %> </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-right">
                    <div class="right-widget recent-post">
                        <h3>Recent Blogs</h3>
                        <a href="#">
                           
                            <div class="rb-box">
                                <div class="rb-box-img">
                                    <img  src="/imageupload/<%= data.image %>" alt="blog1" />
                                </div>
                                <div class="rb-box-desc">
                                    <h4><%= data.title %></h4>
                                    <p> <%= data.description.slice(0, 90) %></p>
                                </div>
                            </div>
                          
                        </a>
                    </div>
                        <div class="right-widget categories">
                            <h3>Categories</h3>
                            <ul>
                            
                           
                                <% cname.forEach((item)=>{ %>
                                 <!-- console.log(item) -->
                                 <li><a href="#"><%= item.cname %></a></li>
                                
                               <%})%>
                            
                        </ul>
                        </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include("./footer.ejs")  %>