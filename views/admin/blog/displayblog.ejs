<%- include('../../header.ejs') %>

<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left">
                        <ul>
                            <li class="active"><a href="/admin/dashboard">Dashboard</a></li>
                            <li><a href="/admin/createblog">Create Blogs</a></li>
                            <li><a href="/admin/displayblog">Blogs Display</a></li>
                            <li><a href="/admin/createcategory">Create Category</a></li>
                            <li><a href="/admin/categorydisplay"> Category Display</a></li>
                            <li><a href="/admin/contactdisplay">Contact</a></li>
                            <li><a href="/about"> About</a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>   
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                            <div class="dash-title">
                                <h1 class="text-success">DISPLAY BLOGS</h1>
                            </div>
                            <div class="dash-nav">
                                <a href="/admin/displayblog" class="btn btn-success">Add Post</a>
                            </div>
                        </div>
                        <table class="table table-bordered">
                            <tr>
                                <th>SNo</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                            <% var i=1 %>
                            <% data.forEach((item)=>{ %>    <!-- FOR EACH LOOP -->
                                <!-- console.log(item) -->
                                <tr>
                                    <td><%= i++ %></td>
                                    <td><%= item.title %></td>
                                    <td><%= item.description %></td>
                                    <!-- static image code -->
                                    <!-- <td><img src="/imageupload/b7.jpg" alt="" width="75px" height="100px"></td> -->
                                     <!-- static image code -->
                                     <!-- dynamic image code -->
                                    <td><img src="/imageupload/<%= item.image %>" alt="" width="114px" height="80px" style="margin-top:20px;" ></td>
                                    <td>
                                        <a href="/admin/viewblog/<%=item._id%>" class="btn btn-info">VIEW</a>
                                        <a href="/admin/editblog/<%=item._id%>"  class="btn btn-success">EDIT</a>
                                        <a href="/admin/deleteblog/<%=item._id%>" class="btn btn-danger">DELETE</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </table>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../../footer.ejs') %>